<p id="notice"><%= notice %></p>

<h1>Tips</h1>

<table>
  <thead>
    <tr>
      <th>Hour</th>
      <th>Tiphometeam</th>
      <th>Tipawayteam</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tips.each do |tip| %>
      <tr>
        <td><%= tip.hour %></td>
        <td><%= tip.tipHomeTeam %></td>
        <td><%= tip.tipAwayTeam %></td>
        <td><%= tip.game %></td>
        <td><%= link_to 'Show', tip %></td>
        <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
        <td><%= link_to 'Destroy', tip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

